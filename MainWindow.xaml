<Window
    Title="Large Folder Finder"
    Height="800" Width="800"
    x:Class="LargeFolderFinder.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:LargeFolderFinder"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="MenuFile" Header="ファイル(_F)" SubmenuOpened="MenuFile_SubmenuOpened">
                <MenuItem x:Name="MenuLanguage" Header="Language(_L)"/>
                <MenuItem x:Name="MenuOpenConfig" Header="設定を開く(_S)" Click="MenuConfig_Click"/>
                <MenuItem x:Name="MenuOpenLogSub" Header="ログを開く(_O)"/>
                <Separator/>
                <MenuItem x:Name="MenuRestartAdmin" Header="管理者として開き直す(_A)" Click="MenuRestartAdmin_Click"/>
                <MenuItem x:Name="MenuExit" Header="終了(_X)" Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem x:Name="MenuHelp" Header="ヘルプ(_H)">
                <MenuItem x:Name="MenuOpenReadme" Header="Readme を開く(_R)" Click="MenuReadme_Click"/>
                <MenuItem x:Name="MenuLicense" Header="ライセンス(_L)">
                    <MenuItem x:Name="MenuAppLicense" Header="アプリのライセンス(_A)" Click="MenuAppLicense_Click"/>
                    <MenuItem x:Name="MenuThirdPartyLicenses" Header="サードパーティライセンス(_T)" Click="MenuThirdPartyLicenses_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="MenuAbout" Header="バージョン情報(_A)" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Input Area -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="FolderLabel" Text="フォルダ:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox
                    x:Name="PathTextBox"
                    Grid.Column="1"
                    Height="25"
                    VerticalContentAlignment="Center"
                    Text="C:\"/>
                <Button
                    Click="BrowseButton_Click"
                    x:Name="BrowseButton" Grid.Column="2" Content="..." Width="30" Height="25" Margin="5,0,0,0"/>
            </Grid>

            <!-- ファルダサイズ (GB) and 空白 セレクト -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock
                    x:Name="SearchSizeLabel"
                    Text="検索サイズ:"
                    VerticalAlignment="Center"
                    Margin="0,0,5,0"
                    ToolTip="このサイズ以上のフォルダを抽出して一覧表示します。0も指定可能ですが、小さいサイズを指定するほど探索に時間がかがかかります。"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox
                        Text="100"
                        x:Name="ThresholdTextBox"
                        Width="60"
                        Height="25"
                        VerticalContentAlignment="Center"/>
                    <ComboBox
                        x:Name="UnitComboBox"
                        Width="50"
                        Height="25"
                        VerticalContentAlignment="Center"
                        Margin="5,0,0,0"
                        SelectionChanged="UnitComboBox_SelectionChanged"/>
                </StackPanel>
                <TextBlock
                    x:Name="SeparatorLabel"
                    Text="空白:"
                    VerticalAlignment="Center"
                    Margin="10,0,5,0"
                    Grid.Column="2"
                    ToolTip="フォルダ名とサイズ間のスペースを指定します。"/>
                <ComboBox x:Name="SeparatorComboBox" Grid.Column="3" Width="70" Height="25" VerticalContentAlignment="Center" SelectedIndex="1" Margin="0,0,10,0" HorizontalAlignment="Left" SelectionChanged="SeparatorComboBox_SelectionChanged">
                    <ComboBoxItem Content="Tab"/>
                    <ComboBoxItem Content="Space"/>
                </ComboBox>

                <StackPanel x:Name="TabWidthPanel" Grid.Column="4" Orientation="Horizontal" Visibility="Collapsed">
                    <TextBlock Text="Tab Width:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="TabWidthTextBox" Width="30" Height="25" VerticalContentAlignment="Center" Text="8" Margin="0,0,10,0" TextChanged="TabWidthTextBox_TextChanged"/>
                </StackPanel>
                
                
                <!-- Scan Buttons -->
                <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button
                        Click="ScanButton_Click"
                        x:Name="RunButton" 
                        Content="Scan" 
                        Width="100" 
                        Height="25" 
                        FontWeight="Bold"
                        Background="#0078D7"
                        Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    
                    <!-- Cancel Buttons -->
                    <Button
                        Click="CancelButton_Click"
                        x:Name="CancelButton" 
                        Content="Cancel" 
                        Width="70" 
                        Height="25" 
                        Margin="10,0,0,0"
                        IsEnabled="False" 
                        ToolTip="キャンセルします。できないときはXボタンを押してください。"/>

                    <!-- Open Settings Buttons -->
                    <Button
                        Click="OpenConfigButton_Click"
                        x:Name="OpenConfigButton" 
                        Width="25" 
                        Height="25" 
                        Padding="4"
                        Margin="10,0,0,0"
                        ToolTip="高度な設定 (Config.txt) を開く"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Center">
                        <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.35 19.43,11.03L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.97 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.97 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11.03C4.53,11.35 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.95C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.68 16.04,18.34 16.56,17.95L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
                              Fill="#555" Stretch="Uniform" />
                    </Button>

                    <!-- Copy Buttons -->
                    <Button
                        Click="CopyButton_Click"
                        x:Name="CopyButton" 
                        Width="25" 
                        Height="25" 
                        Padding="4"
                        Margin="10,0,0,0"
                        ToolTip="結果をクリップボードにコピー"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Center">
                        <Path Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z" 
                               Fill="#555" Stretch="Uniform" />
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Result TREE Output Area -->
            <RichTextBox x:Name="OutputTextBox" Grid.Row="2" 
                    FontFamily="MS Gothic" FontSize="12" 
                    IsReadOnly="True" 
                    UndoLimit="0"
                    IsUndoEnabled="False"
                    SpellCheck.IsEnabled="False"
                    VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>

            <!-- Progress Bar(進捗率) -->
            <ProgressBar x:Name="ScanProgressBar" Grid.Row="3" Height="20" Margin="0,5,0,0" Visibility="Collapsed" Minimum="0" Maximum="100" Value="0"/>

            <!-- Status Bar (完了,経過時間などを表示) -->
            <StatusBar Grid.Row="4" Margin="0,5,0,0">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem Grid.Column="0">
                    <TextBlock 
                        Text="準備完了"
                        x:Name="StatusTextBlock"/>
                </StatusBarItem>
                <Separator Grid.Column="1" Margin="5,2" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                <StatusBarItem Grid.Column="1">
                    <TextBlock 
                        Text=""
                        Foreground="#0078D7"
                        FontWeight="SemiBold"
                        x:Name="NotificationTextBlock"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </DockPanel>
</Window>
