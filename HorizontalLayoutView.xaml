<!-- Horizontal Layout View -->
<local:LayoutViewBase x:Class="LargeFolderFinder.HorizontalLayoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LargeFolderFinder"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="1000">
    <local:LayoutViewBase.Resources>
        <!-- 右クリックメニュー -->
        <ContextMenu x:Key="ItemContextMenu">
            <MenuItem Header="プログラムで開く" 
                      Command="ApplicationCommands.Open"
                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
            <MenuItem Header="所有者を表示" 
                      Click="OwnerMenuItem_Click"
                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
        </ContextMenu>
    </local:LayoutViewBase.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>    <!-- Main Content Area -->
            <RowDefinition Height="Auto"/> <!-- Footer Area (Full Width) -->
        </Grid.RowDefinitions>

        <!-- Main Content (Settings Left, Results Right) -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MaxWidth="250" MinWidth="195"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column: Settings Area -->
            <Grid Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Row 0: View Label -->
                    <RowDefinition Height="Auto"/> <!-- Row 1: Display Settings -->
                </Grid.RowDefinitions>

                <!-- Row 0: View Label Header -->
                <TextBlock x:Name="viewHeaderLabel" Grid.Row="0" Text="View" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,0,5" FontSize="12"/>


                <!-- Row 1: Display Settings (Vertical & Indented) -->
                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="15,0,0,0">
                    <!-- Font Size -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Font:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="fontSizeTextBox" Width="30" Height="24" VerticalContentAlignment="Center" Text="14" />
                    </StackPanel>
                    <!-- View Files -->
                    <StackPanel x:Name="includeFilesPanel" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock x:Name="includeFilesLabel" Text="Show Files" VerticalAlignment="Center" Margin="0,0,3,0"/>
                        <CheckBox x:Name="includeFilesCheckBox" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- Size Threshold Input -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock x:Name="minSizeLabel" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="minSizeTextBox" Width="52" Height="26" VerticalContentAlignment="Center" Text="1" Margin="0,0,5,0"/>
                        <ComboBox x:Name="unitComboBox" Width="45" Height="26" VerticalContentAlignment="Center">
                        </ComboBox>
                    </StackPanel>
                    <!-- Separator -->
                    <StackPanel x:Name="separatorOuterPanel" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock x:Name="separatorLabel" Text="Space:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="separatorComboBox" Width="60" Height="24" VerticalContentAlignment="Center" SelectedIndex="0">
                            <ComboBoxItem>Tab</ComboBoxItem>
                            <ComboBoxItem>Space</ComboBoxItem>
                        </ComboBox>
                        <!-- Tab Width -->
                        <StackPanel x:Name="tabWidthArea" Orientation="Horizontal" Margin="5,5,0,5">
                            <TextBlock x:Name="tabWidthLabel" Text="Width:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="tabWidthTextBox" Width="30" Height="24" VerticalContentAlignment="Center" Text="4" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Filter -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,5">
                        <TextBlock x:Name="filterLabel" Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                         <ComboBox x:Name="filterModeComboBox" Height="26" VerticalContentAlignment="Center" Margin="0,0,0,5">
                            <ComboBoxItem Content="Normal Search" IsSelected="True"/>
                            <ComboBoxItem Content="Regular Expression"/>
                        </ComboBox>
                        <TextBox x:Name="filterTextBox"  Height="24" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,0,5" >
                    <Button x:Name="copyButton" ToolTip="Copy" Width="26" Height="26" Click="CopyButton_Click">
                        <Path Data="{StaticResource CopyIconGeometry}" Fill="#444" Stretch="Uniform" Margin="4" />
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Right column: Results Area -->
            <Grid Grid.Column="1" Margin="0,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>    <!-- Text display -->
                </Grid.RowDefinitions>
                
            <!-- Output ListBox (Virtualizing) -->
            <ListView x:Name="outputListBox" 
                     Grid.Row="1"
                     VirtualizingStackPanel.IsVirtualizing="True"
                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                     ScrollViewer.VerticalScrollBarVisibility="Auto" 
                     FontFamily="MS Gothic"
                     FontSize="16"
                     BorderThickness="1"
                     BorderBrush="#ABADB3"
                     AlternationCount="2"
                     SelectionMode="Extended"
                     PreviewKeyDown="ListBox_PreviewKeyDown"
                     KeyDown="Input_KeyDown">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0,0"/>
                        <Setter Property="MinHeight" Value="8"/>
                        <!-- Event Handlers -->
                        <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"/>
                        <Setter Property="ContextMenu" Value="{DynamicResource ItemContextMenu}"/>
                        
                        <Style.Triggers>
                            <!-- 1. Alternation -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F8F8F8"/>
                            </Trigger>

                            <!-- 2. Collapsed Folder (Green) -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsExpanded}" Value="False"/>
                                    <Condition Binding="{Binding IsFile}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Background" Value="#7eee87"/>
                            </MultiDataTrigger>

                            <!-- 3. Selection (Highest Priority) -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#CCE8FF"/>
                                <Setter Property="BorderBrush" Value="#99D1FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn x:Name="NameColumn" Header="Name" Width="600" DisplayMemberBinding="{Binding IndentedName}" />
                        <GridViewColumn x:Name="SizeColumn" Header="Size" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplaySize}" TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn x:Name="DateColumn" Header="Date Modified" Width="140" DisplayMemberBinding="{Binding DisplayDate, StringFormat=yyyy/MM/dd HH:mm}" />
                        <GridViewColumn x:Name="TypeColumn" Header="Type" Width="80" DisplayMemberBinding="{Binding DisplayType}" />
                        <GridViewColumn x:Name="OwnerColumn" Header="Owner" Width="150" DisplayMemberBinding="{Binding Owner}" />
                    </GridView>
                </ListView.View>
            </ListView>
                
                <!-- Loading Overlay -->
                <Grid x:Name="loadingOverlay" Grid.Row="1" Background="#80FFFFFF" Visibility="Collapsed" d:Visibility="Visible">
                     <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Loading..." FontSize="16" Foreground="#555" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <ProgressBar IsIndeterminate="True" Width="150" Height="4"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <!-- Footer (Full Width) -->
        <StackPanel Grid.Row="1" Margin="10,0,10,10">
            <Border Height="1" Background="#EEE" Margin="0,0,0,5"/>
            <ProgressBar x:Name="scanProgressBar" Height="4" Margin="0,0,0,2" Visibility="Collapsed" />
            <Grid>
                <TextBlock x:Name="statusTextBlock" Text="準備完了" Foreground="Gray" FontSize="11" />
                <TextBlock x:Name="notificationTextBlock" HorizontalAlignment="Right" Foreground="#0078D7" FontSize="11" />
            </Grid>
        </StackPanel>
    </Grid>
</local:LayoutViewBase>
