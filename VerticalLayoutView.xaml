<local:LayoutViewBase x:Class="LargeFolderFinder.VerticalLayoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LargeFolderFinder"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">
    <local:LayoutViewBase.Resources>
        <!-- 右クリックメニュー -->
        <ContextMenu x:Key="ItemContextMenu">
            <MenuItem Header="プログラムで開く" 
                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
            <MenuItem Header="所有者を表示" 
                      Click="OwnerMenuItem_Click"
                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
        </ContextMenu>
    </local:LayoutViewBase.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Settings Area -->
            <RowDefinition Height="*"/>    <!-- Results Area -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Settings Area -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Row 0: Display settings -->
            </Grid.RowDefinitions>

            <!-- Row 3: Display Settings Row -->
            <Grid Grid.Row="0" Margin="0,0,0,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="viewHeaderLabel" Text="表示" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <!-- Font Size -->
                    <TextBlock Text="Font:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBox x:Name="fontSizeTextBox" Width="30" VerticalContentAlignment="Center" Text="14" Margin="0,0,20,0" />
                    <!-- Toggle File Visibility -->
                    <StackPanel x:Name="includeFilesPanel" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock x:Name="includeFilesLabel" Text="View Files" VerticalAlignment="Center" Margin="0,0,2,0"/>
                        <CheckBox x:Name="includeFilesCheckBox" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- Search Size -->
                    <TextBlock x:Name="minSizeLabel" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="minSizeTextBox" Width="52" VerticalContentAlignment="Center" Text="1" Margin="0,0,0,0"/>
                    <ComboBox x:Name="unitComboBox" Width="45" VerticalContentAlignment="Center" Margin="0,0,20,0">
                        <ComboBoxItem>B</ComboBoxItem>
                        <ComboBoxItem>KB</ComboBoxItem>
                        <ComboBoxItem>MB</ComboBoxItem>
                        <ComboBoxItem>GB</ComboBoxItem>
                        <ComboBoxItem>TB</ComboBoxItem>
                    </ComboBox> 
                    <!-- Separator Option (Space/Tab) -->
                    <TextBlock x:Name="separatorLabel" Text="Space:" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    <ComboBox x:Name="separatorComboBox" Width="60" VerticalContentAlignment="Center" SelectedIndex="0" Margin="0,0,5,0">
                        <ComboBoxItem>Tab</ComboBoxItem>
                        <ComboBoxItem>Space</ComboBoxItem>
                    </ComboBox>
                    <!-- Tab Width (Only visible in Tab mode) -->
                    <StackPanel x:Name="tabWidthArea" Orientation="Horizontal" Visibility="Visible">
                        <TextBlock x:Name="tabWidthLabel" Text="Width:" VerticalAlignment="Center" Margin="0,0,0,0"/>
                        <TextBox x:Name="tabWidthTextBox" Width="25" VerticalContentAlignment="Center" Text="8" />
                    </StackPanel>
                    
                    <!-- Filter -->
                    <StackPanel x:Name="filterPanel" Orientation="Horizontal" Margin="20,0,0,0">
                         <TextBlock x:Name="filterLabel" Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                         <ComboBox x:Name="filterModeComboBox" Width="100" VerticalContentAlignment="Center" Margin="0,0,5,0">
                            <ComboBoxItem Content="Normal Search" IsSelected="True"/>
                            <ComboBoxItem Content="Regular Expression"/>
                        </ComboBox>
                        <TextBox x:Name="filterTextBox" Width="100" VerticalContentAlignment="Center"/>
                    </StackPanel>                    
                </StackPanel>
                
                <Button x:Name="copyButton" HorizontalAlignment="Right" Width="24" Height="24" VerticalAlignment="Center" Click="CopyButton_Click" ToolTip="Copy">
                    <Path Data="{StaticResource CopyIconGeometry}" Fill="#444" Stretch="Uniform" Margin="4" />
                </Button>
            </Grid>
        </Grid>

        <!-- Results Area -->
        <Grid Grid.Row="1">
            <!-- Output ListBox (Virtualizing) -->
            <!-- Output ListView -->
            <ListView x:Name="outputListBox" 
                     VirtualizingStackPanel.IsVirtualizing="True"
                     VirtualizingStackPanel.VirtualizationMode="Recycling"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     FontFamily="MS Gothic"
                     FontSize="16"
                     BorderThickness="1"
                     BorderBrush="#ABADB3"
                     AlternationCount="2"
                     SelectionMode="Extended"
                     PreviewKeyDown="ListBox_PreviewKeyDown"
                     KeyDown="Input_KeyDown">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0,0"/>
                        <Setter Property="MinHeight" Value="8"/>
                        <!-- Event Handlers -->
                        <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"/>
                        <Setter Property="ContextMenu" Value="{DynamicResource ItemContextMenu}"/>
                        
                    <Style.Triggers>
                        <!-- 1. Alternation (Lowest Priority) -->
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#F8F8F8"/>
                        </Trigger>
                        
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsExpanded}" Value="False"/>
                                <Condition Binding="{Binding IsFile}" Value="False"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Background" Value="#7eee87"/>
                        </MultiDataTrigger>

                        <!-- 3. Selection (Highest Priority) -->
                        <Trigger Property="IsSelected" Value="True">
                             <Setter Property="Background" Value="#CCE8FF"/>
                             <Setter Property="BorderBrush" Value="#99D1FF"/>
                        </Trigger>
                    </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn x:Name="NameColumn" Header="Name" Width="400" DisplayMemberBinding="{Binding IndentedName}" />
                        <GridViewColumn x:Name="SizeColumn" Header="Size" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplaySize}" TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn x:Name="DateColumn" Header="Date Modified" Width="130" DisplayMemberBinding="{Binding DisplayDate, StringFormat=yyyy/MM/dd HH:mm}" />
                        <GridViewColumn x:Name="TypeColumn" Header="Type" Width="80" DisplayMemberBinding="{Binding DisplayType}" />
                        <GridViewColumn x:Name="OwnerColumn" Header="Owner" Width="150" DisplayMemberBinding="{Binding Owner}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <!-- Loading Overlay -->
            <Grid x:Name="loadingOverlay" Background="#80FFFFFF" Visibility="Collapsed" d:Visibility="Visible">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Loading..." FontSize="16" Foreground="#555" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" Width="150" Height="4"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Footer (Status & Progress) -->
        <StackPanel Grid.Row="2" Margin="0,5,0,0">
            <ProgressBar x:Name="scanProgressBar" Height="4" Margin="0,0,0,2" Visibility="Collapsed" />
            <Grid>
                <TextBlock x:Name="statusTextBlock" Text="Ready." Foreground="Gray" FontSize="11" />
                <TextBlock x:Name="notificationTextBlock" HorizontalAlignment="Right" Foreground="#0078D7" FontSize="11" />
            </Grid>
        </StackPanel>
    </Grid>
</local:LayoutViewBase>
